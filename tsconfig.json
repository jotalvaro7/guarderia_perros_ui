{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "es2020",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "@core/*": [
        "src/app/core/*"
      ],
      "@core-service/*": [
        "src/app/core/services/*"
      ],
      "@login/*": [
        "src/app/feature/login/*"
      ],
      "@producto/*":[
        "src/app/feature/producto/*"
      ],
      "@compra-producto/*":[
        "src/app/feature/compra-producto/*"
      ],
      "@home/*": [
        "src/app/feature/home/*"
      ],
      "@usuario/*":[
        "src/app/feature/usuario/*"
      ],
      "@mascota/*":[
        "src/app/feature/mascota/*"
      ],
      "@registro-ingreso-mascota/*":[
        "src/app/feature/registro-ingreso-mascota/*"
      ],
      "@factura/*":[
        "src/app/feature/factura/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
